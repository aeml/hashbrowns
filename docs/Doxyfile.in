## Doxygen configuration (configured via CMake)

PROJECT_NAME           = "@PROJECT_NAME@"
PROJECT_NUMBER         = "@PROJECT_VERSION@"
OUTPUT_DIRECTORY       = "@CMAKE_CURRENT_BINARY_DIR@/docs"
CREATE_SUBDIRS         = NO

# Inputs
# NOTE: Use relative paths so this file works both when configured by CMake (substituting
# @CMAKE_SOURCE_DIR@) and when run directly by CI without configure step.
# Doxygen treats these relative to the location of this file (project_root/docs).
INPUT                  = ../src ../docs/api ../docs/tutorials ../README.md
FILE_PATTERNS          = *.h *.hpp *.cpp *.md
RECURSIVE              = YES
EXCLUDE_PATTERNS       = */tests/* */build/*

# Extraction
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = YES
EXTRACT_LOCAL_CLASSES  = YES
JAVADOC_AUTOBRIEF      = YES
MULTILINE_CPP_IS_BRIEF = YES

# Warnings
WARN_IF_UNDOCUMENTED   = NO
WARNINGS               = YES
QUIET                  = YES
FULL_PATH_NAMES        = NO

# Output
GENERATE_HTML          = YES
HTML_OUTPUT            = html
GENERATE_LATEX         = NO
GENERATE_XML           = NO

# Diagrams (disabled by default to keep CI light)
HAVE_DOT               = NO

# Use a markdown file as the landing page and enable Markdown support
# Use absolute (configured) path for reliability when invoked via CMake in build dir
USE_MDFILE_AS_MAINPAGE = "@CMAKE_SOURCE_DIR@/docs/api/mainpage.md"
MARKDOWN_SUPPORT       = YES

# Improve navigation
GENERATE_TREEVIEW      = YES
DISABLE_INDEX          = NO
ALPHABETICAL_INDEX     = YES
